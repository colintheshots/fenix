<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                    <solid android:color="?privateBrowsingButtonBackground" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_fpn_disabled"
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:drawable="@drawable/ic_fpn_disabled"
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </layer-list>
    </item>
</selector>